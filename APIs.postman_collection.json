{
  "info": {
    "_postman_id": "",
    "name": "APIs",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_exporter_id": ""
  },
  "item": [
    {
      "name": "dev",
      "request": {
        "method": "POST",
        "header": [],
        "body": {
          "mode": "raw",
          "raw": "{{request_parameter}}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "{{baseURL}}/{{end_point}}",
          "host": [
            "{{baseURL}}"
          ],
          "path": [
            "{{end_point}}"
          ]
        }
      },
      "response": []
    }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "pm.request.method = pm.variables.get(\"request_type\");",
          ""
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "pm.test(pm.variables.get(\"request_type\")+\" Method: \" +\"Status code is 200\", function () {",
          "    pm.response.to.have.status(200);",
          "});",
          "pm.test(\"Response time is less than 5000ms\", function () {",
          "    pm.expect(pm.response.responseTime).to.be.below(5000);",
          "});",
          "pm.test(\"Response is not empty\", function () {",
          "    pm.response.to.be.ok;",
          "    pm.response.to.have.body; ",
          "});",
          ""
        ]
      }
    }
  ],
  "variable": [
    {
      "key": "request_parameter",
      "value": "{{request_parameter}}",
      "type": "string"
    },
    {
      "key": "end_point",
      "value": "{{end_point}}",
      "type": "string"
    },
    {
      "key": "use_case",
      "value": "{{use_case}}",
      "type": "string"
    },
    {
      "key": "baseURL",
      "value": "https://reqres.in",
      "type": "string"
    },
    {
      "key": "request_type",
      "value": "{{request_type}}",
      "type": "string"
    }
  ]
}
